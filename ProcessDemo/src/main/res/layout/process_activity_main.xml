<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_process_scenes_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主进程模拟只有主进程可初始化的类并调用" />

        <Button
            android:id="@+id/btn_process_scenes_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A进程模拟所有进程都可初始化的类并调用" />

        <Button
            android:id="@+id/btn_process_scenes_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B进程模拟只有B进程可初始化的类并调用" />

        <Button
            android:id="@+id/btn_process_scenes_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主进程分别调用上面3个初始化过的类" />
    </LinearLayout>
</RelativeLayout>